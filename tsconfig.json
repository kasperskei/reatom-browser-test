{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": true,
    "skipLibCheck": true,

    "jsx": "preserve",
    "jsxFactory": "h",
    "jsxFragmentFactory": "hf",
    "jsxImportSource": "@reatom/jsx",
  }
}
